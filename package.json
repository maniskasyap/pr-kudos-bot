{
  "name": "pr-kudos-bot",
  "version": "1.0.0",
  "description": "A bot to motivate and make you feel good when you raise a PR",
  "author": "Manish Kumar <manis.kasyap@gmail.com> (https://medium.com/all-is-web)",
  "license": "ISC",
  "repository": "https://github.com//pr-kudos-bot.git",
  "homepage": "https://github.com//pr-kudos-bot",
  "bugs": "https://github.com//pr-kudos-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^12.2.8"
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
